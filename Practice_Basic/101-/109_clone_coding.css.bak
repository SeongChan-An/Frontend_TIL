@import "./reset.css";
@font-face {
  font-family: "GmarketSansBold";
  src: url("https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2001@1.1/GmarketSansBold.woff")
    format("woff");
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: "GmarketSansMedium";
  src: url("https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2001@1.1/GmarketSansMedium.woff")
    format("woff");
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: "Noto Sans KR";
  font-style: normal;
  font-weight: 400;
  src: url("https://fonts.gstatic.com/ea/notosanskr/v2/NotoSansKR-Regular.woff2")
      format("woff2"),
    url("https://fonts.gstatic.com/ea/notosanskr/v2/NotoSansKR-Regular.woff")
      format("woff"),
    url("https://fonts.gstatic.com/ea/notosanskr/v2/NotoSansKR-Regular.otf")
      format("opentype");
}

#app {
  font-family: GmarketSansMedium;
  background-color: #5b2386;
  color: white;
  text-align: center;
  padding-bottom: 70px;
}

.tit-law {
  display: inline-block;
  position: relative;
  margin-top: 194px;
}

.tit-law .img-tit {
  position: relative;
  z-index: 10; /* 포지션 값이 있어야만 적용이 됨 */
}

.tit-law::after {
  /* 가상요소 display와 content 요소 있어야한다. */
  display: block;
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 225px;
  height: 225px;
  margin: -112px 0 0 -112px;
  /* transform: translate(-50%, -50%); */
  background-image: url("./10000hours/from_teacher/images-law/title_bg.png");
  background-size: 225px;
}

.img-txt {
  max-width: 486px;
  margin: 125px auto 78px;
}

.txt-desc {
  position: relative;
  width: 475px;
  margin: 0 auto 102px;
  line-height: 24px;
  font-size: 18px;
}
.txt-desc .tit-desc {
  font-size: 24px;
  font-weight: bold;
}
.txt-desc::before,
.txt-desc::after {
  position: absolute;
  top: 50%;
  display: block;
  content: "";
  width: 37px;
  height: 32px;
  margin-top: -16px;
}

.txt-desc::before {
  left: 0;
  background-image: url("./10000hours/from_teacher/images-law/txt-left.png");
}
.txt-desc::after {
  right: 0;
  background-image: url("./10000hours/from_teacher/images-law/txt-right.png");
}

.cont-inp, .cont-result {
  font-size: 24px;
  line-height: 24px;
}

.cont-inp .txt-wannabe {
  margin-bottom: 27px;
}

.cont-inp .txt-time {
  margin-bottom: 115px;
}

.cont-inp .txt-wannabe input,
.cont-inp .txt-time input {
  width: 228px;
  height: 57px;
  border: none;
  border-radius: 7px;
  text-align: center;
  font-size: 24px;
}

.cont-inp .btn-exec,
.btn-go,
.btnshare {
  padding: 21px 49px;
  margin-bottom: 147px;
  font-family: GmarketSansBold;
  font-size: 24px;
  line-height: 24px;
  color: #5b2386;
  background-color: #fcee21;
  border-radius: 56px;
  cursor: pointer;
  border: none;
}

.cont-inp .btn-exc::after {
  display: block;
  content: "";
  width: 64px;
  height: 72px;
}

.cont-result .txt-wannabe,
.cont-result .txt-time {
  line-height: 72px;
}
.cont-result .txt-wannabe {
  margin-bottom: 17px;
}
.cont-result .txt-time {
  margin-bottom: 127px;
}
.cont-result .txt-wannabe strong,
.cont-result .txt-time strong {
  font-size: 72px;
  vertical-align: top;
  font-family: GmarketSansBold;
}

.btn-share {
  margin-left: 18px;
  background-color: #fff;
}

.cont-footer {
  font-family: Noto Sans KR;
  font-size: 12px;
  line-height: 17px;
}

.cont-footer .img-footer {
  width: 125px;
  height: 25px;
  margin: 0 auto 20px;
}
